@model IEnumerable<HostelManagementSystem.Models.Tenant>

<h1>Tenant List</h1>
<a href="/Tenant/Create">Add New Tenant</a>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Room</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tenant in Model)
        {
            <tr>
                <td>@tenant.Name</td>
                <td>@tenant.Email</td>
                <td>@tenant.Phone</td>
                <td>@tenant.Room?.Name</td>
                <td>
                    <a href="/Tenant/Edit/@tenant.Id">Edit</a> |
                    <a href="/Tenant/Delete/@tenant.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>