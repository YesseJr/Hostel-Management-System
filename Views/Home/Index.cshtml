@model HostelManagementSystem.Models.HomeViewModel

@{
    Layout = "_Layout";
}

<div class="container">
    <!-- Hero Section -->
    <div class="hero-section text-center">
        <h1>Welcome to the Hostel Management System</h1>
        <p>Your comfort is our priority</p>
        <a href="/Account/Login" class="btn btn-primary btn-sm">Login as User</a>
        <a href="/Admin/Login" class="btn btn-secondary btn-sm">Login as Admin</a>
    </div>

    <!-- General Overview Section -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5>About J11 Hostels</h5>
                </div>
                <div class="card-body">
                    <p>Welcome to J11 hostels! We offer comfortable rooms, excellent facilities, and a friendly
                        atmosphere. Whether you're a student or a traveler, we have everything you need for a pleasant
                        stay.</p>
                    <p>Our hostel features:</p>
                    <ul>
                        <li>Spacious and clean rooms</li>
                        <li>24/7 security</li>
                        <li>Free Wi-Fi</li>
                        <li>Common areas for socializing</li>
                        <li>On-site dining options</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
