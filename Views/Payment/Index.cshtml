@model IEnumerable<HostelManagementSystem.Models.Payment>

<h1>Payment List</h1>
<a href="/Payment/Create">Add New Payment</a>
<table>
    <thead>
        <tr>
            <th>Tenant</th>
            <th>Amount</th>
            <th>Payment Date</th>
            <th>Method</th>
            <th>Transaction ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.User.FirstName @payment.User.LastName</td>
                <!-- Adjusted to show tenant name from ApplicationUser -->
                <td>@payment.Amount</td>
                <td>@payment.PaymentDate.ToString("g")</td>
                <td>@payment.Method</td>
                <td>@payment.TransactionId</td>
                <td>
                    <a href="/Payment/Edit/@payment.Id">Edit</a> |
                    <a href="/Payment/Delete/@payment.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
