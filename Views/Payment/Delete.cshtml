@model HostelManagementSystem.Models.Payment

<h2>Delete Payment</h2>

<div>
    <h4>Are you sure you want to delete this payment?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tenant
        </dt>
        <dd class="col-sm-10">
            @Model.User.FirstName @Model.User.LastName <!-- Ensure this references the correct object -->
        </dd>
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @Model.Amount
        </dd>
        <dt class="col-sm-2">
            Payment Date
        </dt>
        <dd class="col-sm-10">
            @Model.PaymentDate.ToString("g")
        </dd>
        <dt class="col-sm-2">
            Method
        </dt>
        <dd class="col-sm-10">
            @Model.Method
        </dd>
        <dt class="col-sm-2">
            Transaction ID
        </dt>
        <dd class="col-sm-10">
            @Model.TransactionId
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
